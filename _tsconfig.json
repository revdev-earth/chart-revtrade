{
  "compilerOptions": {
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": false,
    "target": "es2015",
    "outDir": "lib",
    "declaration": true,
    "strict": true,
    "module": "esnext",
    "noEmitOnError": true,
    "lib": ["es2015", "DOM"],
    "esModuleInterop": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "rollup.config.ts", "src/global.d.ts"]
}
